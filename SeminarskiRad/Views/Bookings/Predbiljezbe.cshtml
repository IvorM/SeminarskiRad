@{
    ViewBag.Title = "title";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Predbilježbe</h1>
    </div>
</div>
<div id="predbiljezbe">
</div>

<div class="modal" id="prijavaModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Prijava</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Ime</label>
                    <input type="text" class="form-control" id="imeModal"></input>
                </div>
                <div class="form-group">
                    <label>Prezime</label>
                    <input type="text" class="form-control" id="prezimeModal"></input>
                </div>
                <div class="form-group">
                    <label>Adresa</label>
                    <input type="text" class="form-control" id="adresaModal"></input>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Odustani</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="btnPrijavaTok">Prijava</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        var SeminarID = null;
        function UpdateBookings() {
            $.ajax({
                    url: '@Url.Action("GetBookings","Bookings")',
                    type: 'GET'
                })
                .done(function(partialView) {
                    $('#predbiljezbe').html(partialView);
                    $('.footable').footable();
                });
        };
        
        $('#predbiljezbe')
            .on('click',
                '.btn.btn-primary',
                function (e) {
                    SeminarID = e.currentTarget.value;
                    console.log(SeminarID);
                });

        $('#btnPrijavaTok')
            .click(function () {
                var prijavaObj = {
                    'StudentName': $('#imeModal').val(),
                    'StudentSurname': $('#prezimeModal').val(),
                    'StudentAddress': $('#adresaModal').val(),
                    'SeminarID': SeminarID
                };

                $.ajax({
                    url: '@Url.Action("Create", "Bookings")',
                    type: 'POST',
                    dataType:'json',
                    data: {
                        'booking': prijavaObj
                    },
                    success: function (data) {
                        if (data.status == "success") {
                            $.notify(data.message, "success");
                        } else {
                            $.notify(data.message, "error");
                        }
                    },
                    error: function (xhr, status, error) {
                        $.notify("Greška prilikom prijave", "error");
                    }
                });
            });

        $(document)
            .ready(function () {
                UpdateBookings();
            });
    </script>
}